<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutSettings">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Change bookstore background color" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radiogroup"
        >

        <RadioButton
            android:id="@+id/radioBtnGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple Gray" />

        <RadioButton
            android:id="@+id/radioBtnGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mint" />

        <RadioButton
            android:id="@+id/radioBtnBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocean" />

        <RadioButton
            android:id="@+id/radioBtnPink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby Pink" />

    </RadioGroup>
</LinearLayout>